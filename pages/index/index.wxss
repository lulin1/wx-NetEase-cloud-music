/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.float {
  float: left;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}

.play,.pause,.time {
  flex: 1;
  height: 100%;
}

.time {
  text-align: center;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  line-height: 50px;
}

.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}

.weui-navbar {
  background: #fff;
}

.grid {
  width: 32%;
  height: 200px;
  display: inline-block;
  margin: 2px;
}

.weui-grids {
  border-bottom:1rpx solid #D9D9D9;
}

.weui-grid {
  border-right: none;
  border-bottom: none;
}

.weui-grid-first {
  padding-left: 0;
}

.weui-grid-middle {
  padding-left: 2.5px;
  padding-right: 2.5px;
}

.weui-grid-last {
  padding-right: 0;
}

.song-name{
  color: #507daf;
  font-size: 18px;
}

.song-singer{
  color: #888888;
  font-size: 12px;
}

.list-header {
  position: relative;
  margin-bottom: 10px;
}

.list-header text {
  font-size: 20px;
  font-weight: 400;
  padding: 20px 0;
}

.list-header text:first-child {
  padding-left: 15px;
}

.list-header text:first-child::after {
  content: '';
  width: 2px;
  height: 20px;
  background-color: #D43C33;
  position: absolute;
  vertical-align: middle;
  left: 0;
  top: 6px;
}

.swiper {
  width: 100%;
  height: 200px;
}

.swiper-image {
  width: 100%;
}

.list-content-image {
  display: inline-block;
  width: 100%; 
  height: 120px;
  border-right: none
}

.list-content-text {
  width: 100%;
}